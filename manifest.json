{
  "manifest_version": 3,
  "name": "Telegram Video Downloader",
  "version": "1.1",
  "description": "Download videos from group chats on Telegram Web (supports both /k and /a versions)",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "http://web.telegram.org/*",
    "https://web.telegram.org/*",
    "https://*.telegram.org/*"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://web.telegram.org/*", "https://web.telegram.org/*"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/telegram_download_helper.js", "content/web_telegram_inject_for_download.js"],
      "matches": ["http://web.telegram.org/*", "https://web.telegram.org/*"]
    }
  ],
  "default_locale": "en"
} 